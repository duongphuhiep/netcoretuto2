---
import { Bell, X } from '@lucide/astro';
import DirSwitcher from './DirSwitcher.astro';
import ThemeSwitcher from './ThemeSwitcher.astro';
---

<div class='menu menu-horizontal bg-base-200 w-full gap-5 items-baseline px-6'>
    <div class='tooltip tooltip-bottom' data-tip='Close'>
        <label for='drawer-toggler'>
            <X />
        </label>
    </div>
    <div class='flex-1'></div>
    <button class='tooltip tooltip-bottom' data-tip='Notifications'>
        <Bell />
    </button>
    <div class='tooltip tooltip-bottom' data-tip='Switch Text direction'>
        <DirSwitcher />
    </div>
    <div class='tooltip tooltip-bottom' data-tip='Switch Dark/Light theme'>
        <ThemeSwitcher />
    </div>
</div>
<ul class='menu w-full'>
    <li><a>Get Started</a></li>
    <li><a>Docs</a></li>
    <li><a>Learn More</a></li>
    <li><a>Projects</a></li>
</ul>

<ul class='menu bg-base-200 rounded-box w-full'>
    <li><a>Item 1</a></li>
    <li>
        <details open>
            <summary>Parent</summary>
            <ul>
                <li><a>Submenu 1</a></li>
                <li><a>Submenu 2</a></li>
                <li>
                    <details open>
                        <summary>Parent</summary>
                        <ul>
                            <li><a>Submenu 1</a></li>
                            <li><a>Submenu 2</a></li>
                        </ul>
                    </details>
                </li>
            </ul>
        </details>
    </li>
</ul>
