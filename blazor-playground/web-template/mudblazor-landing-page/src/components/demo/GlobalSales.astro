---
import { TrendingUp } from '@lucide/astro';
---

<div class="card bg-base-200 shadow-lg">
  <div class="card-body p-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-semibold text-base-content">Global Sales (%)</h3>
      <button class="btn btn-sm btn-ghost">
        <TrendingUp size={16} />
        Overview
      </button>
    </div>

    <div class="space-y-3">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-6 h-4 bg-primary rounded-sm"></div>
          <span class="text-sm font-medium">Turkey: 9</span>
        </div>
        <div class="text-sm text-base-content/70">25%</div>
      </div>
      <div class="progress progress-primary w-full h-2">
        <div class="progress-bar bg-primary" style="width: 25%"></div>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-6 h-4 bg-success rounded-sm"></div>
          <span class="text-sm font-medium">India: 12</span>
        </div>
        <div class="text-sm text-base-content/70">32%</div>
      </div>
      <div class="progress progress-success w-full h-2">
        <div class="progress-bar bg-success" style="width: 32%"></div>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-6 h-4 bg-error rounded-sm"></div>
          <span class="text-sm font-medium">Canada: 13</span>
        </div>
        <div class="text-sm text-base-content/70">18%</div>
      </div>
      <div class="progress progress-error w-full h-2">
        <div class="progress-bar bg-error" style="width: 18%"></div>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-6 h-4 bg-info rounded-sm"></div>
          <span class="text-sm font-medium">US: 16</span>
        </div>
        <div class="text-sm text-base-content/70">42%</div>
      </div>
      <div class="progress progress-info w-full h-2">
        <div class="progress-bar bg-info" style="width: 42%"></div>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-6 h-4 bg-secondary rounded-sm"></div>
          <span class="text-sm font-medium">Netherlands: 14</span>
        </div>
        <div class="text-sm text-base-content/70">28%</div>
      </div>
      <div class="progress progress-secondary w-full h-2">
        <div class="progress-bar bg-secondary" style="width: 28%"></div>
      </div>

      <div class="flex items-center justify-between">
        <div class="flex items-center gap-3">
          <div class="w-6 h-4 bg-accent rounded-sm"></div>
          <span class="text-sm font-medium">Italy: 17</span>
        </div>
        <div class="text-sm text-base-content/70">38%</div>
      </div>
      <div class="progress progress-accent w-full h-2">
        <div class="progress-bar bg-accent" style="width: 38%"></div>
      </div>
    </div>
  </div>
</div>