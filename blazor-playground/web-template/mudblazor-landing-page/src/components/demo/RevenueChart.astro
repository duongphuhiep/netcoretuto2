<div class="card bg-base-200 shadow-lg">
  <div class="card-body p-6">
    <div class="flex items-center justify-between mb-6">
      <div>
        <h3 class="text-lg font-semibold text-base-content mb-2">Revenue Statistics</h3>
        <div class="flex items-center gap-4">
          <div class="text-3xl font-bold text-base-content">$184.78K</div>
          <div class="flex items-center gap-1 text-success text-sm">
            <span>+3.24%</span>
          </div>
        </div>
        <p class="text-base-content/70 text-sm">Total income in this year</p>
      </div>
      <div class="tabs tabs-boxed">
        <a class="tab">Day</a>
        <a class="tab">Month</a>
        <a class="tab tab-active">Year</a>
      </div>
    </div>

    <!-- Chart -->
    <div class="relative h-64">
      <div class="flex items-end justify-between h-full gap-2">
        <div class="flex flex-col items-center gap-2">
          <div class="w-8 h-20 bg-gradient-to-t from-warning to-warning/50 rounded-t"></div>
          <div class="w-8 h-32 bg-gradient-to-t from-primary to-primary/50 rounded-t"></div>
          <span class="text-xs text-base-content/70">2016</span>
        </div>
        <div class="flex flex-col items-center gap-2">
          <div class="w-8 h-24 bg-gradient-to-t from-warning to-warning/50 rounded-t"></div>
          <div class="w-8 h-36 bg-gradient-to-t from-primary to-primary/50 rounded-t"></div>
          <span class="text-xs text-base-content/70">2017</span>
        </div>
        <div class="flex flex-col items-center gap-2">
          <div class="w-8 h-28 bg-gradient-to-t from-warning to-warning/50 rounded-t"></div>
          <div class="w-8 h-40 bg-gradient-to-t from-primary to-primary/50 rounded-t"></div>
          <span class="text-xs text-base-content/70">2018</span>
        </div>
        <div class="flex flex-col items-center gap-2">
          <div class="w-8 h-32 bg-gradient-to-t from-warning to-warning/50 rounded-t"></div>
          <div class="w-8 h-44 bg-gradient-to-t from-primary to-primary/50 rounded-t"></div>
          <span class="text-xs text-base-content/70">2019</span>
        </div>
        <div class="flex flex-col items-center gap-2">
