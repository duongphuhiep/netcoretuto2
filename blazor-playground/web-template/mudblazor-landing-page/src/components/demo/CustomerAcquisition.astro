<div class="card bg-base-200 shadow-lg">
  <div class="card-body p-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-lg font-semibold text-base-content">Customer Acquisition</h3>
      <span class="text-sm text-base-content/70">Prediction</span>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 gap-4 mb-6">
      <div class="text-center">
        <div class="text-sm text-base-content/70">Advertise</div>
        <div class="text-2xl font-bold text-base-content">$148</div>
        <div class="text-success text-sm">+4.78%</div>
      </div>
      <div class="text-center">
        <div class="text-sm text-base-content/70">Customers</div>
        <div class="text-2xl font-bold text-base-content">427</div>
        <div class="text-success text-sm">+3.15%</div>
      </div>
    </div>

    <!-- Chart -->
    <div class="relative h-32">
      <svg viewBox="0 0 300 80" class="w-full h-full">
        <!-- Grid lines -->
        <defs>
          <pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse">
            <path d="M 20 0 L 0 0 0 20" fill="none" stroke="currentColor" stroke-width="0.5" opacity="0.1"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid)"/>
        
        <!-- Customer line -->
        <polyline
          fill="none"
          stroke="#3B82F6"
          stroke-width="2"
          points="20,60 40,55 60,50 80,45 100,40 120,35 140,45 160,40 180,35 200,30 220,25 240,30 260,35 280,40"
        />
        
        <!-- Advertise line -->
        <polyline
          fill="none"
          stroke="#6B7280"
          stroke-width="2"
          stroke-dasharray="5,5"
          points="20,50 40,45 60,40 80,35 100,30 120,25 140,35 160,30 180,25 200,20 220,15 240,20 260,25 280,30"
        />
        
        <!-- Data points -->
        <circle cx="280" cy="40" r="3" fill="#3B82F6"/>
        <circle cx="280" cy="30" r="3" fill="#6B7280"/>
      </svg>
    </div>

    <!-- Legend -->
    <div class="flex items-center gap-6 mt-4">
      <div class="flex items-center gap-2">
        <div class="w-3 h-3 bg-primary rounded-full"></div>
        <span class="text-sm text-base-content/70">Customer</span>
      </div>
      <div class="flex items-center gap-2">
        <div class="w-3 h-0.5 bg-base-content/70"></div>
        <span class="text-sm text-base-content/70">Advertise</span>
      </div>
    </div>
  </div>
</div>