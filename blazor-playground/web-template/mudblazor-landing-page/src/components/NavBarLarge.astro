---
import Logo from '../assets/mudblazor.svg';
import DirSwitcher from './DirSwitcher.astro';
import ThemeSwitcher from './ThemeSwitcher.astro';
import GithubLogo from '../assets/github-mark.svg';
import NotificationBell from './NotificationBell.astro';
import SearchButton from './SearchButton.astro';
---

<nav class='navbar px-6 py-2 bg-base-200 w-full hidden lg:flex'>
    <div class='navbar-start w-full'>
        <div class='w-[40px]'><Logo /></div>
        <div class='tracking-[0.2rem] font-normal ms-3 text-2xl text-primary'>
            MudBlazor
        </div>

        <ul tabindex='0' class='menu menu-horizontal ms-3 gap-3'>
            <li><a>Get Started</a></li>
            <li><a>Docs</a></li>
            <li><a>Learn More</a></li>
            <li>
                <details>
                    <summary>Projects</summary>
                    <ul class='p-2'>
                        <li><a>Submenu 1</a></li>
                        <li><a>Submenu 2</a></li>
                    </ul>
                </details>
            </li>
        </ul>
    </div>

    <div class='navbar-end'>
        <div class='menu menu-horizontal gap-6'>
            <div>
                <SearchButton />
            </div>
            <NotificationBell />
            <div>
                <a
                    class='tooltip tooltip-bottom'
                    data-tip='Switch Text direction'>
                    <DirSwitcher />
                </a>
            </div>
            <div>
                <a
                    class='tooltip tooltip-bottom'
                    data-tip='Switch Dark/Light theme'>
                    <ThemeSwitcher />
                </a>
            </div>
            <div>
                <a class='tooltip tooltip-bottom' data-tip='Github'>
                    <GithubLogo width='24px' class='fill-current' />
                </a>
            </div>
        </div>
    </div>
</nav>
