---
import Layout from '../layouts/Layout.astro';
import LayoutNavBar from '../layouts/LayoutNavBar.astro';
---

<LayoutNavBar>
    <div>
        Lorem ipsum, dolor sit amet consectetur adipisicing elit. Eveniet omnis
        quo tenetur, <span class='text-accent'>quibusdam</span> blanditiis fugit
        placeat atque, animi aliquam iste consectetur incidunt commodi? Commodi eius
        reiciendis labore ut fugit. Alias!
    </div>
    <div class='flex p-20 gap-10 flex-wrap'>
        <button class='btn btn-primary'> Normal </button>
        <button
            class="btn btn-primary relative overflow-hidden transition-all duration-300 ease-out
               before:content-[''] before:absolute before:inset-x-0 before:-top-full before:h-full before:bg-gradient-to-b before:from-white/50 before:to-transparent before:transition-transform before:duration-300 before:ease-out
               active:before:translate-y-full">
            Gradient Slides in from Top
        </button>
        <button
            class="btn btn-primary relative overflow-hidden transition-all duration-300 ease-out
               before:content-[''] before:absolute before:bottom-0 before:right-0 before:w-full before:h-full
               before:bg-gradient-to-tl before:from-white/70 before:to-transparent
               before:transition-transform before:duration-300 before:ease-out
               before:translate-x-full before:translate-y-full
               active:before:translate-x-0 active:before:translate-y-0">
            Gradient Slides in from the Bottom-Right Corner.
        </button>
        <button
            class="btn btn-primary relative overflow-hidden
         transform transition-all duration-100
         hover:shadow-lg
         active:scale-95 active:shadow-inner active:translate-y-1
         before:content-[''] before:absolute before:bottom-0 before:right-0 before:w-full before:h-full
         before:bg-gradient-to-tl before:from-white/70 before:to-transparent
         before:transition-transform before:duration-300 before:ease-out
         before:translate-x-full before:translate-y-full
         active:before:translate-x-0 active:before:translate-y-0">
            Deep Press + Gradient Slide
        </button>
        <button
            class="btn btn-primary
            relative
            overflow-hidden
            transform
            transition-all
            duration-150
            hover:shadow-lg
            hover:shadow-blue-500/25
            active:scale-95
            active:shadow-inner
            active:translate-y-1
            active:brightness-110
            before:content-['']
            before:absolute
            before:inset-0
            before:bg-gradient-to-br
            before:from-white/30
            before:via-white/10
            before:to-transparent
            before:transition-all
            before:duration-200
            before:ease-out
            before:translate-x-full
            before:translate-y-full
            active:before:translate-x-0
            active:before:translate-y-0
            active:before:skew-x-0">
            Enhanced Deep Press + Gradient Slide
        </button>

        <button
            class="btn btn-primary relative overflow-hidden transition-all duration-300 ease-out
               before:content-[''] before:absolute before:inset-0 before:bg-gradient-to-br before:from-white/50 before:to-transparent before:opacity-0 before:transition-opacity before:duration-300 before:ease-out
               active:before:opacity-75">
            "Fade-In/Out" Gradient Overlay
        </button>
        <button
            class="btn btn-primary relative overflow-hidden transition-all duration-300 ease-out
               before:content-[''] before:absolute before:-inset-0.5 before:z-[-1] before:rounded-btn
               before:bg-gradient-to-br before:from-purple-500 before:via-pink-500 before:to-red-500
               before:opacity-0 before:transition-opacity before:duration-300 before:ease-out
               active:before:opacity-100 active:scale-[0.98]">
            "Gradient Border" Effect
        </button>
    </div>

    <div class='flex p-20 gap-10 flex-wrap'>
        <button class='btn btn-primary'> Normal </button>
        <button
            class='btn btn-primary transform transition-all duration-150 ease-in-out hover:scale-105 active:scale-95 active:shadow-inner'>
            1. Scale + Shadow Effect
        </button>
        <button
            class='btn btn-primary bg-gradient-to-r from-blue-500 to-purple-600 hover:from-blue-600 hover:to-purple-700 active:from-blue-700 active:to-purple-800 transition-all duration-200'>
            2. Gradient Shift Effect
        </button>

        <button
            class='btn btn-primary transform transition-all duration-100 hover:shadow-lg active:scale-95 active:shadow-inner active:translate-y-1'>
            3. Deep Press Effect
        </button>

        <button
            class='btn btn-primary transition-all duration-200 hover:shadow-lg hover:shadow-blue-500/50 active:shadow-inner active:shadow-blue-700/50'>
            4. Glow Effect
        </button>

        <button
            class='btn btn-primary transform transition-all duration-200 hover:scale-105 hover:brightness-110 active:scale-90 active:brightness-90'>
            5. Bounce + Fade Effect
        </button>

        <button
            class='btn btn-primary transform transition-all duration-150 ease-in-out hover:scale-105 hover:shadow-lg hover:shadow-blue-500/25 active:scale-95 active:shadow-inner active:brightness-95'>
            6. Multi-layered Effect (Recommended)
        </button>
        <button
            class='btn btn-primary transition-all duration-200 hover:shadow-md active:shadow-inner active:bg-opacity-90 active:transform active:translate-y-0.5'>
            7. Subtle Depth Effect
        </button>
    </div>

    <div class='flex p-20 gap-10 flex-wrap'>
        <button class='btn btn-accent btn-ripple'>
            Ripple effect Gemini
        </button>
    </div>

    <h1>I want this</h1>
    <div class='flex p-20 gap-10 flex-wrap'>
        <button class='btn btn-accent'> Normal </button>
        <button
            class="btn btn-accent
                active:scale-95
                relative overflow-hidden transition-all
                duration-300 ease-out
               before:content-['']
               before:absolute
               before:inset-0
               before:bg-gradient-to-br
               before:from-white/50
               before:to-transparent
               before:opacity-0
               before:transition-opacity
               before:duration-300
               before:ease-out
               active:before:opacity-75">
            Click Me
        </button>
        <button
            class="btn btn-accent relative overflow-hidden
         transform transition-all duration-100
         hover:shadow-lg
         active:scale-95 active:shadow-inner active:translate-y-1
         before:content-[''] before:absolute before:bottom-0 before:right-0 before:w-full before:h-full
         before:bg-gradient-to-tl before:from-white/70 before:to-transparent
         before:transition-transform before:duration-300 before:ease-out
         before:translate-x-full before:translate-y-full
         active:before:translate-x-0 active:before:translate-y-0">
            Deep Press + Gradient Slide
        </button>
    </div>
</LayoutNavBar>
