---
import Layout from '../layouts/Layout.astro';
---

<Layout>
    <div
        class='flex flex-col items-center justify-center min-h-screen bg-gray-100 p-8'>
        <h2 class='text-3xl font-bold mb-8'>Device Mockups</h2>

        <div
            class='relative w-64 h-96 bg-gray-900 rounded-3xl shadow-xl overflow-hidden mb-12'>
            <div
                class='absolute top-0 left-1/2 -translate-x-1/2 w-28 h-5 bg-gray-800 rounded-b-lg'>
                <div
                    class='absolute top-1 left-1/2 -translate-x-1/2 w-2 h-2 bg-gray-600 rounded-full'>
                </div>
                <div
                    class='absolute top-1 left-1/2 translate-x-1/2 w-12 h-1.5 bg-gray-700 rounded-full'>
                </div>
            </div>

            <div
                class='absolute inset-4 bg-gray-800 rounded-2xl flex items-center justify-center text-gray-500 text-lg'>
                Empty Screen
            </div>

            <div
                class='absolute right-0 top-24 w-1.5 h-10 bg-gray-800 rounded-r'>
            </div>
            <div
                class='absolute right-0 top-40 w-1.5 h-16 bg-gray-800 rounded-r'>
            </div>
            <div
                class='absolute left-0 top-32 w-1.5 h-16 bg-gray-800 rounded-l'>
            </div>
        </div>
    </div>
</Layout>
