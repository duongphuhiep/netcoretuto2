        </Content>
        <Content Update="Components\Libs\SearchDialog.razor.js">
            <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
        </Content>
    </ItemGroup>

    <Target Name="PreBuild" BeforeTargets="PreBuildEvent">
        <Exec Command="bash &quot;../prebuild.sh&quot;"/>
    </Target>
</Project>
