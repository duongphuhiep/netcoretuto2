        <Content Update="Components\Libs\CardSample.razor.css">
            <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
        </Content>
        <Content Update="Components\Libs\ThemeSwitcher.razor.css">
            <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
        </Content>
        <Content Update="Components\Libs\Links.razor.css">
